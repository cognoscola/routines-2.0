<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/button_horizontal_margin"
    android:layout_marginStart="@dimen/button_horizontal_margin"
    android:id="@+id/buttonStatus">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/statusImage"
        android:src="@drawable/ic_crop_square_black_24dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="@dimen/button_text_width"
        android:layout_height="wrap_content"
        android:id="@+id/statusText"
        android:text="@string/status"
        android:textSize="@dimen/notification_button_text_size"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/notification_button_text_color"
        />

</LinearLayout>