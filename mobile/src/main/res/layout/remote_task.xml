<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="9dp"
    android:background="@color/notification_bg_color"
    android:id="@+id/notificationContainer"
    android:gravity="center_vertical"
    >

    <include layout="@layout/remote_group_back"
        android:layout_height="@dimen/notification_object_height"
        android:layout_width="wrap_content"
        android:id="@+id/previousGroup"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:id="@+id/contentGroup"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_object_height"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/statusButton"
        android:layout_toEndOf="@+id/previousGroup"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textColor="@color/notification_title_text_color"
            android:textSize="@dimen/notification_title_text_size"
            tools:text="Meditate"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/notification_description_text_color"
            android:textSize="@dimen/notification_description_text_size"
            tools:text="You have completed 5/7 times this week. Super slong text" />

    </LinearLayout>

 <!--   <include layout="@layout/remote_group_expand_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandButton"
        android:layout_toStartOf="@id/statusButton"
        android:layout_toRightOf="@+id/contentGroup"
        android:layout_centerVertical="true"
        />-->

    <include layout="@layout/remote_group_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notification_object_height"
        android:id="@+id/statusButton"
        android:layout_toStartOf="@id/nextGroup"
        android:layout_centerVertical="true"/>

    <include layout="@layout/remote_group_next"
        android:layout_height="@dimen/notification_object_height"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/nextGroup"/>

</RelativeLayout>